    <script>
        // Toggle mobile menu
        function toggleMenu() {
            const menu = document.getElementById('topMenu');
            menu.classList.toggle('active');
        }

        // Check if admin is logged in
        if (!localStorage.getItem('isAdminLoggedIn')) {
            // Uncomment for production
            // window.location.href = 'login.html';
        }

        // Load dashboard data
        function loadDashboardData() {
            document.getElementById('totalUsers').textContent = '1,245';
            document.getElementById('totalMerchants').textContent = '342';
            document.getElementById('totalTransactions').textContent = '8,567';
            document.getElementById('totalRevenue').textContent = '₹12.5L';
            document.getElementById('successRate').textContent = '96.8%';
            document.getElementById('activeKeys').textContent = '156';
        }

        // Logout function
        function logout() {
            if (confirm('Are you sure you want to logout?')) {
                localStorage.removeItem('adminToken');
                localStorage.removeItem('adminId');
                localStorage.removeItem('adminName');
                localStorage.removeItem('adminEmail');
                localStorage.removeItem('isAdminLoggedIn');
                window.location.href = 'login.html';
            }
        }

        // Load data on page load
        loadDashboardData();
    </script>
