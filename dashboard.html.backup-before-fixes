    <script>
        // Load user data from localStorage
        document.addEventListener('DOMContentLoaded', function() {
            const accountType = localStorage.getItem('accountType') || 'personal';
            const userName = localStorage.getItem('userName') || 'User';
            
            // Update user name
            document.getElementById('userName').textContent = userName;
            document.getElementById('welcomeName').textContent = userName;
            
            // Update account type badge
            const badge = document.getElementById('accountTypeBadge');
            const badgeText = document.getElementById('accountTypeText');
            
            // Account type configurations
            const accountConfigs = {
                personal: {
                    name: 'Personal',
                    icon: 'fa-user',
                    planName: 'Personal Plan',
                    features: [
                        { icon: 'fa-check-circle', text: 'Basic payments' },
                        { icon: 'fa-check-circle', text: 'Up to â‚¹50K/month' },
                        { icon: 'fa-check-circle', text: 'Standard support' }
                    ]
                },
                business: {
                    name: 'Business',
                    icon: 'fa-briefcase',
                    planName: 'Business Plan',
                    features: [
                        { icon: 'fa-check-circle', text: 'Advanced features' },
                        { icon: 'fa-check-circle', text: 'Up to â‚¹10L/month' },
                        { icon: 'fa-check-circle', text: 'Priority support' }
                    ]
                },
                enterprise: {
                    name: 'Enterprise',
                    icon: 'fa-building',
                    planName: 'Enterprise Plan',
                    features: [
                        { icon: 'fa-check-circle', text: 'All features' },
                        { icon: 'fa-check-circle', text: 'Unlimited volume' },
                        { icon: 'fa-check-circle', text: '24/7 dedicated support' }
                    ]
                }
            };
            
            const config = accountConfigs[accountType];
            
            // Update badge
            badge.className = `account-type-badge ${accountType}`;
            badge.innerHTML = `<i class="fas ${config.icon}"></i><span>${config.name}</span>`;
            
            // Update plan name
            document.getElementById('accountPlanName').innerHTML = `<i class="fas fa-crown"></i> ${config.planName}`;
            
            // Update features
            const featuresContainer = document.getElementById('accountFeatures');
            featuresContainer.innerHTML = config.features.map(feature => `
                <div class="account-feature">
                    <i class="fas ${feature.icon}"></i>
                    <span>${feature.text}</span>
                </div>
            `).join('');
        });
    </script>
